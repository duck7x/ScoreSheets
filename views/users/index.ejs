<%- include("../partials/header") %>
	<h1>This is the users page :)</h1>
	<div class="container ui grid center">
		<% users.forEach(function(user){ %>
			<div class="three wide column single-user-container center text-center" user_id="<%= user._id %>">
				<strong>username: </strong> <%= user.username %><br>
				<strong>auth level:</strong> <%= user.auth_level %><br>
				
				<form action="/users/<%= user._id %>/delete?_method=DELETE" method="POST">
					<a href="/users/<%= user._id %>/edit"><i class="pencil alternate icon clickable edit-user"></i></a>
					<button><i class="x icon clickable delete-user"></i></button>
				</form>
			</div>	
		<% }); %>
	</div>

	<script type="text/javascript" src="/js/users.js"></script>
<%- include("../partials/footer") %>