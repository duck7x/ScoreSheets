<%- include("../partials/header") %>
<h1>
	NEW GAME
</h1>

<div class="container">
	<form action="/games" method="POST">
		<label name="name">Name:</label> <input type="text" placeholder="name" name="name" required><br>
		<label name="image">Image:</label> <input type="text" placeholder="image url/path" name="image"> <label name="upload">Upload?</label> <input type="checkbox" name="upload"><br>
		<label name="min-players">Minimum players: </label> <input type="number" name="min-players"> <label name="max-players">Maximum players: </label> <input type="number" name="max-players"><br>
		<h1>
			Fields
		</h1>
		<span class="clickable add-field"><i class="plus circle icon"></i> Add field</span>
		<div class="field-template">
			<!-- DESC: ID // PLAYER: NAME -->
			<label name="field-name">Name:</label> <input type="text" name="field-name" placeholder="field name"><br>
			<!-- DESC: alt // PLAYER: value -->
			<label name="field-value">Value:</label> <input type="number" name="field-value"><br>
			<!-- DESC: actual text -->
			<label name="field-title">Title:</label> <input type="text" name="field-title" placeholder="field title"><br>
			<!-- DESC: displayed icon -->
			<label name="field-icon">Icon:</label> <input type="text" placeholder="icon url/path" name="field-icon"> <label name="field-upload">Upload?</label> <input type="checkbox" name="field-upload"><br>
			<!-- DESC: css classes -->
			<label name="field-desc-classes">Desc classes:</label> <input type="text" name="field-desc-classes" placeholder="field desc classes"><br>
			<!-- PLAYER: css classes -->
			<label name="field-player-classes">Player classes:</label> <input type="text" name="field-player-classes" placeholder="field player classes"><br>
			<!-- DESC: class // PLAYER: class -->
			<label name="field-calc-method">Calculation Method:</label> SHOULD BE DROPDOWN<br>
			<!-- DESC: class // PLAYER: class -->
			<label name="field-score-total">Score total?</label> <input type="checkbox" name="field-score-total">
		</div>
		<input type="submit" value="Add game">
	</form>
</div>	
<%- include("../partials/footer") %>