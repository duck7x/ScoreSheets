<%- include("../partials/header") %>

<div class="container">
	<p>
		<div class="ui grid">
			<% games.forEach(function(game){ %>
				<div class="four wide column">
					<h1 class="index"><%= game.name %></h1>
					<!-- <img class="index" src="<%= game.image %>"> -->
					<div class="img index" id="a<%= game._id  %>">
						<style>
							#a<%= game._id  %>{background-image: url("<%= game.image %>");}
						</style>
					</div>
					<% if(currentUser && currentUser.auth_level === "admin"){ %>
						<form action="/games/<%= game._id %>/delete?_method=DELETE" method="POST">
							<button class="clickable white delete-game"><i class="x icon"></i><strong>REMOVE GAME</strong></button>
							<a href="/games/<%= game._id %>/edit" class="clickable white edit-game"><i class="pencil alternate icon "></i><strong>EDIT GAME</strong></a>
						</form>
					<% } %>
				</div>
			<% }); %>
		</div>
	</p>
</div>

<%- include("../partials/footer") %>